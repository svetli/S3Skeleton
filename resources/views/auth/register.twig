{% extends 'templates/default.twig' %}

{% block title %}
	Register
{% endblock %}

{% block content %}
<div>
	<form action="{{ path_for('register.post') }}" method="post" autocomplete="off">
		<label for="email">Email</label>
		<input type="text" name="email" id="email" {% if posted.email %} value="{{ posted.email }}" {% endif %}> 
		{% if errors.first('email') %}{{ errors.first('email') }}{% endif %}
		<br>
		<label for="username">Username</label>
		<input type="text" name="username" id="username" {% if posted.username %} value="{{ posted.username }}" {% endif %}>
		{% if errors.first('username') %}{{ errors.first('username') }}{% endif %}
		<br>
		<label for="password">Password</label>
		<input type="password" name="password" id="password">
		{% if errors.first('password') %}{{ errors.first('password') }}{% endif %}
		<br>
		<label for="password_confirm">Confirm password</label>
		<input type="password" name="password_confirm" id="password_confirm">
		{% if errors.first('password_confirm') %}{{ errors.first('password_confirm') }}{% endif %}
		<br>
		<input type="submit" value="Register">
		<input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
	</form>
</div>
{% endblock %}