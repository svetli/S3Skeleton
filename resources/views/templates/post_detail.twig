{% extends 'templates/default.twig' %}
{% block title %}{{ post.title }}{% endblock %}
{% set post_header = 1 %}
{% block content %}
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {{ post.body|raw }}
            </div>
        </div>
    </div>
</article>
{% endblock %}
