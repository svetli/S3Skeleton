{% extends 'templates/default.twig' %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
{% for post in posts %}
            <div class="post-preview">
                <a href="{{ post.seo_url }}">
                    <h2 class="post-title">
                        {{ post.title }}
                    </h2>
                    <h3 class="post-subtitle">
                        {{ post.excerpt }}
                    </h3>
                </a>
                <p class="post-meta">Posted by <a href="#0">{{ post.getUserName }}</a> on {{ post.getCategoryName }}</p>
            </div>
            <hr>
{% endfor %}
            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
