{% extends 'templates/default.twig' %}

{% block title %}
Password Reset
{% endblock %}

{% block content %}
<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <form action="{{ path_for('password_reset.post') }}?email={{ email }}&identifier={{ identifier|url_encode }}" method="post" autocomplete="off">
        <h2 class="form-signin-heading">Change Your Password</h2>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label for="password" class="sr-only">New password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="New password">
                {% if errors.first('password') %}{{ errors.first('password') }}{% endif %}
                <label for="password_confirm" class="sr-only">Confirm new password</label>
                <input type="password" name="password_confirm" id="password_confirm" class="form-control" placeholder="Confirm password">
                {% if errors.first('password_confirm') %}{{ errors.first('password_confirm') }}{% endif %}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-12"><br/>
                <button type="submit" class="btn btn-default btn-sm btn-block">Change password</button>
            </div>
        </div>
        <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
    </form>
</div>
{% endblock %}
