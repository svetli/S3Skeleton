{% extends 'templates/default.twig' %}

{% block title %}
Recover Password
{% endblock %}

{% block content %}
<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <p>Enter your email address to start your password recovery. </p>
    <form action="{{ path_for('password_recover.post') }}" method="post" autocomplete="off">
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label for="email" class="sr-only">Email</label>
                <input type="text" name="email" id="email" class="form-control" {% if posted.email %} value="{{ posted.email }}" {% endif %}placeholder="Email">
                {% if errors.first('email') %}{{ errors.first('email') }}{% endif %}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-12"><br/>
                <button type="submit" class="btn btn-default btn-sm btn-block">Recover</button>
            </div>
        </div>
        <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
    </form>
</div>
{% endblock %}
