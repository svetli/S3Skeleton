{% extends 'templates/default.twig' %}

{% block title %}
Register
{% endblock %}

{% block content %}
<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <form action="{{ path_for('register.post') }}" method="post" autocomplete="off">
        <h2 class="form-signin-heading">Please Register</h2>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label for="email" class="sr-only">Email</label>
                <input class="form-control" type="email" placeholder="Email" name="email" id="email" {% if posted.email %} value="{{ posted.email }}" {% endif %}>
                {% if errors.first('email') %}{{ errors.first('email') }}{% endif %}
                <label for="username" class="sr-only">Username</label>
                <input class="form-control" type="text" placeholder="Username" name="username" id="username" {% if posted.username %} value="{{ posted.username }}" {% endif %}>
                {% if errors.first('username') %}{{ errors.first('username') }}{% endif %}
                <label for="password" class="sr-only">Password</label>
                <input class="form-control" type="password" placeholder="Password" name="password" id="password">
                {% if errors.first('password') %}{{ errors.first('password') }}{% endif %}
                <label for="password_confirm" class="sr-only">Confirm password</label>
                <input class="form-control" type="password" placeholder="Confirm password" name="password_confirm" id="password_confirm">
                {% if errors.first('password_confirm') %}{{ errors.first('password_confirm') }}{% endif %}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-12"><br/>
                <button type="submit" class="btn btn-default btn-sm btn-block">Register</button>
            </div>
        </div>
        <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
    </form>
</div>
{% endblock %}
